extends ../layout
block content
  form#event.form-horizontal(action='/add', method='post')
    input#id_accessed(type='hidden', name='accessed')

    .control-group
      label.control-label(for='id_name') Your name
      .controls
        input#id_name.input-block-level(type='text', name='name', placeholder='John Doe')

    .control-group
        label.control-label(for='id_profession') Profession
        .controls
          input#id_profession.input-block-level(type='text', name='profession', placeholder='Student')

    .control-group
      label.control-label(for='id_location') Location
      .controls
        input#id_location.input-block-level(type='text', name='location', placeholder='London, United Kingdom', required)
        input#id_coords(type='hidden', name='coords')

    .control-group
      label.control-label(for='id_doi') DOI
      .controls
        input#id_doi.input-block-level(type='text', name='doi', placeholder='doi')
        p.help-text Document Object Identifier (DOI)

    .control-group
      label.control-label(for='id_url') URL
      .controls
        if vars.url
          input#id_url.input-block-level(readonly='readonly', type='text', name='url', value='#{vars.url}')
        else
          input#id_url.input-block-level(type='text', name='url', placeholder='http://www.publisher.com/journal?id=XXXX')

    .control-group
      label.control-label(for='id_story') Story
      .controls
        textarea#id_story.input-block-level(name='story', rows=4, placeholder='Your story')

    .control-group
      .controls
        button.btn.btn-primary Open Access please!

block header

block footer

block scripts
  script(src='/js/add.js')

extends ../layout
block content
  h1= count
    small  Scholarly pursuits denied
  div#map-canvas

block scripts
  script(src='https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=false')
  script.
    var coords = !{event_coords};
    var map;
    var marker, i;

    function addMarkers(map) {
      for (i = 0; i < coords.length; i++) {
        if(coords[i].length !== 0) {
          console.log(coords[i].lng);
          marker = new google.maps.Marker({
            position: new google.maps.LatLng(coords[i].lat, coords[i].lng),
            map: map,
            icon: 'img/oalogo.png'
          });
        }
      }
    }

    function initialise() {
      var mapOptions = {
        zoom: 8,
        center: new google.maps.LatLng(51.512268, -0.158272),
        mapTypeId: google.maps.MapTypeId.ROADMAP
      };
      map = new google.maps.Map(document.getElementById('map-canvas'), mapOptions);
      addMarkers(map);
    }
    google.maps.event.addDomListener(window, 'load', initialise);

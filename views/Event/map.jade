extends ../layout
block content
  h1= count
    small  Scholarly pursuits denied
  div#map_canvas

block scripts
  script(src='https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=false')
  script.
    var events = !{events};
    var map;
    var marker, i;

    function addMarkers(map) {
      for (i = 0; i < events.length; i++) {
        if(events[i].coords.length !== 0) {
          console.log(events[i].coords.lng);
          marker = new google.maps.Marker({
            position: new google.maps.LatLng(events[i].coords.lat, events[i].coords.lng),
            map: map,
            icon: 'img/oalogo.png',
            dataContent: '<p>'+events[i].story+'</p><a href="http://dx.doi.org/'+events[i].doi+'">doi</a>|<a href="'+events[i].url+'">url</a>, Accessed '+events[i].accessed,
          });
        }
      }
    }

    function initialise() {
      var mapOptions = {
        zoom: 2,
        center: new google.maps.LatLng(51.512268, -0.158272),
        mapTypeId: google.maps.MapTypeId.ROADMAP
      };
      map = new google.maps.Map(document.getElementById('map_canvas'), mapOptions);
      addMarkers(map);
      
      var popup = new google.maps.InfoWindow({
        content:'<p id="hook">Hello World!</p>'
      });
      
      google.maps.event.addListener(marker, 'click', function() {
        popup.open(map,marker);
      });
    }
    
    google.maps.event.addDomListener(window, 'load', initialise);
